{
  "files": ["./index.ts"],
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    },
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2018.promise",
      "es2015.iterable",
      "es2016",
      "es2017"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  }
}